#stickybox.sidemenu
  %ul.nav.nav-list
    %center
      = image_tag @competition.competition_logo_url(:thumb)
      %h4= @competition.competition_name      
    %li.divider
    - if current_account.profile_type == "Admin"
      %li.nav-header
        Edit Competition 
      %li
        %a{:href => edit_competition_path(@competition)}
          %i.icon-pencil
          Edit This Competition
      %li.divider
    - if @competition.accepting_business_plans?
      %li.nav-header
        Accepting Business Plans
      -if current_account.projects.count > 0
        = form_for :submission, url: submissions_path do |n|
          = n.hidden_field :competition_id, :value => @competition.id
          = n.select :project, {:projects => business_plan_list}, {}, :style => "width: 100%;"
          = n.submit "Submit Your Business Plan!".html_safe, :class => "btn btn-danger"
      -else
        = link_to "#{raw('<i class="icon-beaker icon-large"></i>')} Start A New Project!".html_safe, new_project_path, :class => "btn btn-danger", :method => :get
      %li.divider
    %li.nav-header
      Competition Details
    %li
      %i.icon-map-marker
      Location
      %address.minifont
        = @competition.location
        %br
        = @competition.city + ", " + @competition.state
    %li{:style => "margin-bottom: 18px;"}
      %i.icon-calendar
      Date & Time of Competition
      .minifont
        = @competition.date.strftime("%A, %B %d, %Y")
        %br
        = @competition.time.strftime("%I:%M %p")
    -if @competition.prize?
      %li
        %i.icon-trophy
        Prize
        .minifont
          = @competition.prize
    -if @competition.additional_info?
      %li.divider
      %li.nav-header
        Additional Information
      = link_to "#{raw('<i class="icon-paper-clip"></i>')} Download Information".html_safe, @competition.additional_info.url, :class => "btn btn-danger"
