= form_for @project do |f|
  %section{ :id=>"tabs"}
    %ul
      %li
        %a{:href => '#general'}
          General Info
      %li
        %a{:href => '#team'}
          Team Information
      %li
        %a{:href => '#hamburger'}
          Hamburger
  %div#general.default
    = f.label :business_name
    %br
    = f.text_field :business_name
    %br
    = f.label :industry
    %br
    = f.select :industry, INDUSTRIES, {:include_blank => 'No Selection'}
    %br
    = f.label :city
    %br
    = f.text_field :city
    %br
    = f.label :state
    %br
    = f.select :state, STATES, {:include_blank => 'No Selection'}
    %br
    = f.label :business_concept
    %br
    = f.text_area :business_concept
    %br
    = f.submit "Save Project"
%div#team.inactive
  Current Team Members
  %br
  - @project.members.each do |member|
    = member.first_name
    = member.last_name
    %br
  - @project.pending_memberships.each do |pmember|
    = pmember.account.first_name
    = pmember.account.last_name
    %br
  %br
  %br
  Add New Team Member
  %br
  = form_for :membership, url: memberships_path do |f|
    = f.hidden_field :project, :value => @project.id
    = f.label :recipient_name, "Name"
    = f.text_field :recipient_name
    = f.label :email
    = f.email_field :email
    = submit_tag "Add New Team Member"
%div#hamburger.inactive
  Hamburger!

