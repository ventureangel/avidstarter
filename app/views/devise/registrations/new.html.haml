= devise_error_messages!

%h2 Login Information
%p Please fill out the following fields to sign up. You will use the email address and password you provide to login.
= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
  %div
    = f.label :email
    %br
    = f.email_field :email

  %div
    = f.label :password
    %br
    = f.password_field :password

  %div
    = f.label :password_confirmation
    %br
    = f.password_field :password_confirmation

  %h2 User Information
  %p Please fill out the following section to supplement your login credentials.

  %div
    = f.label :first_name
    %br
    = f.text_field :first_name

  %div
    = f.label :last_name
    %br
    = f.text_field :last_name

  %div
    = f.label :linked_in, 'LinkedIn'
    %br
    = f.text_field :linked_in
  %br
  %div
    = f.check_box :terms_of_service
    = f.label :terms_of_service, "I agree to the Terms of Service and Privacy Policy"
  = f.submit "Create Your Account"

%br


= render "devise/shared/links"
